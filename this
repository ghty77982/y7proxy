    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* General styling */
        body {
            background-color: #0b0c10;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #FF2974; /* Text color */
            text-align: center;
            overflow: hidden; /* Prevent scrollbars from particle effects */
        }

        /* Grid layout for the buttons */
        .button-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-gap: 20px; /* Reduced gap for a tighter grid */
            padding: 20px;
        }

        /* Style for each button link */
        .button {
            width: 150px; /* Smaller button size */
            height: 150px; /* Smaller button size */
            position: relative;
            overflow: hidden;
            cursor: pointer;
            border-radius: 10px;
            border: 2px solid #FF2974;
            background-color: #1a1c22;
            text-decoration: none;
            /*glow effect using multiple box-shadow layers */
            box-shadow:
                0 0 5px #FF2974,
                0 0 15px #FF2974,
                0 0 30px #FF2974;
            transition: box-shadow 0.4s ease-in-out, transform 0.4s ease-in-out;
            transform: scale(1);
        }

        .button:hover {
            /* Intensified glow on hover */
            box-shadow:
                0 0 10px #FF2974,
                0 0 30px #FF2974,
                0 0 60px #FF2974;
            transform: scale(1.05);
        }

        /* Style for the image inside the button */
        .button img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            opacity: 0.7; /* Subdued image to emphasize glow */
            transition: opacity 0.4s ease-in-out;
        }

        .button:hover img {
            opacity: 1; /* Image brightens on hover */
        }

        /* Container for particles */
        .particle-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 10;
        }

        /* Individual particle styling and animation */
        .particle {
            position: absolute;
            background-color: #FF2974;
            border-radius: 50%;
            opacity: 0;
            will-change: transform, opacity;
            top: 50%;
            left: 50%;
            /* Offset to center the particle on the button */
            transform: translate(-50%, -50%);
        }
        
        .button:hover .particle {
            animation: particle-burst 1s forwards ease-out;
        }

        /* Particle animation keyframes to burst outwards */
        @keyframes particle-burst {
            0% {
                transform: translate(-50%, -50%) scale(0);
                opacity: 1;
            }
            100% {
                transform: translate(-50%, -50%) scale(1);
                opacity: 0;
            }
        }
    </style>
</head>
